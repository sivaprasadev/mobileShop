<link rel="stylesheet" href="stylesheets/loginPage.css">
<form action="/login" method="POST">
    <div class="loginText d-flex flex-column bd-highlight justify-content-center align-items-center">
        {{#if loginErr}}
        <p class="error"><i>{{loginErr}}</i></p>
        {{/if}}
        <h1>Login</h1>
    </div>
    <div class="form-group d-flex flex-column bd-highlight justify-content-center align-items-center">
        <input type="email" name="Email" class="form-control w-25 mt-2 border-top-0 border-bottom-0 border-right-0 border-left-0 border-dark 
    rounded-0" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        <input type="password" name="Password" class="form-control border-bottom-0 w-25 mt-5 border-top-0 border-right-0 border-left-0 border-dark
    rounded-0" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Password">

    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary ">Submit</button>
    </div>
</form>
<div class="d-flex justify-content-center">
    <a href="/signup" class="mt-3">Create new account?</span> </a>
</div>