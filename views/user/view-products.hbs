<section>
    <div class="container-fulid pt-3 pl-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 p-3 mt-5">
                <div class="card" style="width:12rem;height:28rem">
                    <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
</body>
